{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"moduleResolution": "Node"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"./vue-shims.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
